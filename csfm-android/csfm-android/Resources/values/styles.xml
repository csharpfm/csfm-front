<?xml version="1.0" encoding="utf-8" ?> 
<resources>
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">#F44336</item>
    <item name="android:colorPrimaryDark">#D32F2F</item>
    <item name="android:colorAccent">#FF9800</item>
    <item name="android:textColorPrimary">#000000</item>
    <item name="android:textColorSecondary">#757575</item>
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>
  </style>


  <style name="LogTheme" parent="@style/MyTheme">
    <item name="android:windowTranslucentStatus">true</item>
  </style>


  <style name="MyButton" parent="Theme.AppCompat.Light">
    <item name="colorControlHighlight">@color/colorPrimary</item>
    <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>

  <style name="MyEditTextTheme">
    <item name="colorControlNormal">#D0B1B1</item>
    <item name="colorControlHighlight">#FFFFFF</item>
    <item name="colorControlActivated">#FFFFFF</item>
    <item name="android:textColorHint">#FFFFFF</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
  </style>
</resources>